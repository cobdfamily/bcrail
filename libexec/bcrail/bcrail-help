#!/usr/bin/env bash
set -euo pipefail

cat <<'USAGE'
Usage: bcrail <command>

Commands:
  config       Print resolved runtime configuration
  getcontext   Print the currently selected bcrail context
  resolve-incus-dns  Resolve IPv4 address for an Incus instance name
  setup        Setup the BCRail environment on a new host
  setcontext   Initialize and select a bcrail context
USAGE
